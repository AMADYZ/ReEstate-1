                <a href="contact.html">Contact</a>
                <a id="searchnav" href="#">Search</a>
                <a id="Signupnav" href="reg.html">SignUp</a>
            </div>
        </nav>
    </div>
    <div class="intro"></div>
    <div class="backimage">
    </div>
    <div class="__title">Residences for Sale</div>
    <h2 class="__titleH2">Here You Can find Everything You Are Looking For</h2>
  

    <div class="filter-search">
           
        <form class="filter-form" action="/filter" method="get">
            <input type="hidden" name="location" value="<%=title %>">
            <div class="inputcont">
            <div class="input-values">
                <div class="dropdown">
                    <button class="dropbtn">Property Type</button>
                    <div class="dropdown-content">
                    <a href="#">Appartment</a>
                    <a href="#">Villa</a>
                    </div>
                </div>
            </div>
            <div class="input-values">
                <div class="dropdown">
                    <button class="dropbtn">Condition</button>
                    <div class="dropdown-content">
                    <a href="#">Purchase</a>
                    <a href="#">Rental</a>
                    </div>
                </div>
                </div>
                <div class="input-values">
                    <div class="area-price">
                            <input type="text" class="dropbtn2" name="Min-Area" placeholder="Min.Area" autocomplete="off"
                            list="min-area-type" >
                        <input type="text" class="dropbtn2" name="Max-Area" placeholder="Max.Area" autocomplete="off"
                            list="max-area-type" >
                    </div>
                </div>
                <div class="input-values">
                <div class="area-price">
                        <input type="text" class="dropbtn2" name="Min-Price" placeholder="Min.Price" autocomplete="off"
                        list="min-price-type" >
                    <input type="text" class="dropbtn2" name="Max-Price" placeholder="Max.Price" autocomplete="off"
                     list="max-price-type">
                    
                </div>
            </div>
                <div class="input-values">
                    <div class="div-info">
                        <div class="dropdown">
                            <button class="dropbtn">Bedrooms</button>
                            <div class="dropdown-content">
                                <input type="hidden" id="selectedButton" name="bedroom" value="">
                                <button class="btns" type="button" onclick="setButtonValue(1)">1</button>
                                <button class="btns" type="button" onclick="setButtonValue(2)">2</button>
                                <button class="btns" type="button" onclick="setButtonValue(3)">3</button>
                                <button class="btns" type="button" onclick="setButtonValue(4)">4</button>
                                <button class="btns" type="button" onclick="setButtonValue(5)">+5</button>
                            </div>
                        </div>
                    </div>
                    
                </div>
                <div class="input-values">
                    <div class="div-info">
                        <div class="dropdown">
                            <button class="dropbtn">Bathrooms</button>
                            <div class="dropdown-content">
                                <input type="hidden" id="selectedButtonB" name="bathroom" value="">
                                <button class="btnsB" type="button" onclick="setButtonValueB(1)">1</button>
                                <button class="btnsB" type="button" onclick="setButtonValueB(2)">2</button>
                                <button class="btnsB" type="button" onclick="setButtonValueB(3)">3</button>
                                <button class="btnsB" type="button" onclick="setButtonValueB(4)">4</button>
                                <button class="btnsB" type="button" onclick="setButtonValueB(5)">+5</button>
                            </div>
                    </div>
                </div>
                   
                </div>
                </div>
                <div class="sub-button">
                    <input type="submit" value="Filter" class="sub">
                </div>
                
        </form>

        </div>
        <div class="container2">
            <div class="list-grid">
                <%   if(data.length>0){%>
                    <% data.forEach(estate=> { %>
                    <article class="popular__card">
                    <div class="photo1">

                        <a href="/details?id=<%= estate._id %>"><img src="/img-search/popular5.jpg" class="popular__img"></a>

                        <div class="img1text">Click for information</div>
                        <span class="condition">For Rent</span>

                    </div>
                    <div class="popular__data">
                        <h3 class="popular__title" style="
                        font-family: 'BW Gradual';
                        ">
                            Aliva Private Garden
                        </h3>
                        <h2 class="popular_price" style="
                        font-family: 'Degular';
                        ">
                            <bold><%=estate.price%></bold>
                        </h2>
                        <p class="popular__description">
                            <%=estate.title%>
                        </p>
                    </div>
                    <div class="line"></div>
                    <div class="inner-details">
                        <div class="bed-details"><img class="bed" src="/Images/bedrooms.png">
                            <div class="number"><%=estate.bedrooms%> Bedrooms</div>
                        </div>
                        <div class="bath-details">
                            <img class="bath" src="/Images/bathrooms.png">
                            <div class="number"><%=estate.bathrooms%> Bathrooms</div>
                        </div>
                        <div class="vl"></div>
                        <p id="meter"><%=estate.area%> m<sup>2</sup></p>
                    </div>
                    <div class="line"></div>
                    <div>
                        <h3 class="info">
                            <bold>Relator</bold>
                        </h3>
                        <div class="relator">
                            <img class="channel" src="/Images/channel-1.jpeg" alt="">
                            <div class="relator-info">
                                <p class="author">Adam perice</p>
                                <p>(555) 555-4321</p>
                            </div>
                        </div>
                    </div>
                </article>
                    <%})%>    
                <% } else { %>
                    <p class="errmsg">There are no Data to display...</p>
                    <% } %>
            </div>
            