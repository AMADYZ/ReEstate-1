<!DOCTYPE html>
<html lang="en">

<head>
	<meta charset="UTF-8">
	<meta http-equiv="X-UA-Compatible" content="IE=edge">
	<meta name="viewport" content=
		"width=device-width, initial-scale=1.0">
	<style>
		.container {
			width: 500px;
			margin: auto;
			text-align: center;
		}
	</style>
</head>

<body>
	<form id="myForm">
		<input type="text" id="inputData"/>
		<input type="text" id="inputData1"/>
		<button type="submit">Submit</button>
	  </form>
	  <h1></h1>



	<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
	<script src="https://code.jquery.com/jquery-3.6.0.min.js"
		integrity=
		"sha256-/xUj+3OJU5yExlq6GSYGSHk7tPXikynS7ogEvDej/m4="
		crossorigin="anonymous">
	</script>

	<script>
		  $(document).ready(function () {
		  $('#myForm').submit(function (event) {
			event.preventDefault(); // Prevent form submission
	  
			const inputData = $('#inputData').val();
			const inputData1 = $('#inputData1').val();
	  
			// Send the AJAX request to the server
			$.ajax({
			  url: '/data',
			  method: 'POST',
			  data: { data: inputData,data1:inputData1 },
			  success: function (response) {
				console.log(response);
				document.querySelector('h1').innerHTML=response.data1;
			  },
			  error: function (error) {
				console.error(error); // Log any errors that occurred
			  },
			});
		  });
		});
	  </script>

</body>

</html>
